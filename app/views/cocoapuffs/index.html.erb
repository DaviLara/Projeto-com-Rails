<p style="color: green"><%= notice %></p>

<% content_for :title, "Cocoapuffs" %>
<div class='create'>
  <%= render "form", cocoapuff: Cocoapuff.new %>
</div>

<div class="box">
  <div class="all">
    <div id="cocoapuffs">
      <% @cocoapuffs.each do |cocoapuff| %>
      <div class="box2">
        <div class="cocoa-name">
          <%= render cocoapuff %>
          
        </div>
        
        
        <h4>Fruity Pebbles:</h4>
        
        <%= link_to "Create Fruty Pebble", new_cocoapuff_fruty_pebble_path(cocoapuff), class: "btn btn-c"%>
          
        <table class="table">
            <thead>
              <tr>
                <th scope="col" class="title_table">ID</th>
                <th scope="col" class="title_table">Nome</th>
                <th scope="col" class="title_table">Pebble Count</th>
              </tr>
            </thead>
            <tbody>
              <% cocoapuff.fruty_pebbles.each_with_index do |fruty_pebble, index| %>
                <tr>
                  <th scope="row"><%= index + 1 %></th>
                  <td><%= fruty_pebble.name %></td>
                  <td><%= fruty_pebble.pebble_count %></td>
                </tr>
              <% end %>
            </tbody>
        </table>
      </div> 
      <!--<%= link_to "Destroy this cocoapuff", cocoapuff_path(cocoapuff), method: :delete, class: "btn btn-danger" %>-->
      <% end %>
    </div>
  
  </div>



</div>





